{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "**/*.ejs",
    "views/**/*",
    "templates/**/*",
    "node_modules/**/*",
    "public/js/three.module.js"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  }
}