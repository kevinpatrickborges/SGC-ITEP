<div id="notificacao-push" class="toast align-items-center text-bg-danger border-0 position-fixed bottom-0 end-0 m-4" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 9999; min-width:300px; display:none;">
  <div class="d-flex">
    <div class="toast-body" id="notificacao-push-msg">
      <!-- Mensagem dinÃ¢mica -->
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close" onclick="document.getElementById('notificacao-push').style.display='none';"></button>
  </div>
</div>
<script>
window.showPushNotificacao = function(msg, tipo = 'danger') {
  var toast = document.getElementById('notificacao-push');
  var msgDiv = document.getElementById('notificacao-push-msg');
  toast.className = 'toast align-items-center text-bg-' + tipo + ' border-0 position-fixed bottom-0 end-0 m-4';
  msgDiv.innerHTML = msg;
  toast.style.display = 'block';
  setTimeout(function(){ toast.style.display = 'none'; }, 3500);
};
</script>
