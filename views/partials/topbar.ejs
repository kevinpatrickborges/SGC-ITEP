<header class="sei-topbar">
  <div class="topbar-left">
    <!-- Botão para encolher/expandir em Desktop -->
    <button class="sidebar-desktop-toggle sidebar-toggle-btn d-none d-lg-block" type="button">
      <i class="bi bi-filter-left"></i>
    </button>
    <!-- Botão para abrir/fechar em Mobile -->
    <button class="sidebar-mobile-toggle sidebar-toggle-btn d-lg-none" type="button">
      <i class="bi bi-layout-sidebar"></i>
    </button>
  </div>
  <div class="sei-topbar-right">
    <a href="/usuarios/perfil" class="sei-user">
      <i class="bi bi-person-circle"></i> 
      <span><%= currentUser ? currentUser.nome : 'Usuário' %></span>
    </a>
    <button class="theme-toggle" type="button" title="Alternar tema" id="themeToggle">
      <i class="bi bi-sun-fill theme-icon" id="lightIcon"></i>
      <i class="bi bi-moon-fill theme-icon hidden" id="darkIcon"></i>
    </button>
    <a href="/auth/logout" class="sei-logout" title="Sair">
      <i class="bi bi-arrow-bar-right"></i>
    </a>
  </div>
</header>
