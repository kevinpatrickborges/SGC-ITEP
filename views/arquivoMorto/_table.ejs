<div class="table-responsive">
    <% if (items.length > 0) { %>
    <table class="table table-bordered table-hover" width="100%" cellspacing="0">
        <thead>
            <tr>
                <% fields.forEach(field => { %>
                    <th><%= field.charAt(0).toUpperCase() + field.slice(1) %></th>
                <% }) %>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
            <tr>
                <% fields.forEach(field => { %>
                    <td><%= item[field] ? (item[field] instanceof Date ? item[field].toLocaleDateString('pt-BR') : item[field]) : 'N/A' %></td>
                <% }) %>
                <td>
                    <!-- Formulário para Restaurar -->
                    <form action="/arquivo-morto/restaurar/<%= model %>/<%= item.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja restaurar este item?');">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-success btn-sm" title="Restaurar">
                            <i class="fas fa-undo"></i> Restaurar
                        </button>
                    </form>

                    <!-- Formulário para Excluir Permanentemente -->
                    <form action="/arquivo-morto/excluir-permanente/<%= model %>/<%= item.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Atenção! Esta ação é irreversível. Deseja excluir permanentemente este item?');">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-danger btn-sm" title="Excluir Permanentemente">
                            <i class="fas fa-trash"></i> Excluir Perm.
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">Nenhum item arquivado encontrado.</p>
    <% } %>
</div>
