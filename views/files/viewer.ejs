<%- include('../partials/header') %>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Visualizador de PDF</h1>
    <p class="mb-4">Visualizando o arquivo: <%= fileName %></p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Conteúdo do Documento</h6>
        </div>
        <div class="card-body" style="text-align: center; background-color: #f0f0f0;">
            <div id="pdf-viewer-container" data-url="<%= fileUrl %>">
                <div id="pdf-viewer"></div>
            </div>
            <div class="mt-3">
                <span>Página: <span id="page_num">1</span> / <span id="page_count">0</span></span>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<!-- Inclui a biblioteca PDF.js -->
<script src="//cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.102/pdf.min.js"></script>

<!-- Inclui nosso script customizado -->
<script src="/js/pdf-viewer.js"></script>
