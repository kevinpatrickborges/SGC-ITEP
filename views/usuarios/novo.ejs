<div class="container-fluid">
    <h1 class="mt-4"><%= title %></h1>

    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
    <% } %>

    <form action="/usuarios/novo" method="POST" class="row g-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="col-md-6">
            <label class="form-label">Nome</label>
            <input type="text" name="nome" class="form-control" required value="<%= typeof formData !== 'undefined' ? formData.nome : '' %>">
        </div>
        <div class="col-md-6">
            <label class="form-label">Matrícula</label>
            <input type="text" name="matricula" class="form-control" value="<%= typeof formData !== 'undefined' ? formData.matricula : '' %>">
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input type="text" name="email" class="form-control" required value="<%= typeof formData !== 'undefined' ? formData.email : '' %>">
        </div>
        <div class="col-md-6">
            <label class="form-label">Senha</label>
            <input type="password" name="senha" class="form-control" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Perfil</label>
            <select name="perfil" class="form-select" required>
                <option value="">Selecione...</option>
                <option value="admin" <%= (typeof formData !== 'undefined' && formData.perfil === 'admin') ? 'selected' : '' %>>Administrador</option>
                <option value="tecnico" <%= (typeof formData !== 'undefined' && formData.perfil === 'tecnico') ? 'selected' : '' %>>Técnico</option>
                <option value="auditor" <%= (typeof formData !== 'undefined' && formData.perfil === 'auditor') ? 'selected' : '' %>>Auditor</option>
            </select>
        </div>
        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Salvar Usuário</button>
            <a href="/usuarios" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
